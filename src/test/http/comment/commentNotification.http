Authorization: {{accessToken}}
Content-Type: application/json

{
  "memberId": 1,
  "type": "인증",
  "title": "오늘의 스터디2",
  "content": {
    "text": "자료구조 스터디 완료",
    "imageUrls": [
      "https://storage.com/aaa.jpg",
      "https://storage.com/bbb.jpg"
    ]
  }
}


